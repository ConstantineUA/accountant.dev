{% extends 'layout.html.twig' %}

{% block pageHeader %}{{ category.getName|capitalize }} <small>{% include 'blocks.period.status.html.twig' %}</small>{% endblock %}

{% block content %}
<div class="btn-group">
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle disabled" type="button" data-toggle="dropdown">
            <span>{{ 'actions'|trans }}</span>
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="actions">
            <li class="disabled" role="presentation"><a role="menuitem" href="#">{{ 'edit'|trans }}</a></li>
            <li role="presentation"><a role="menuitem" href="#">{{ 'delete'|trans }}</a></li>
        </ul>
    </div>
</div>

<button id="apply" class="btn btn-info disabled">{{ 'apply'|trans }}</button>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="row">
                <th><input type="checkbox" value="all" id="select-all"></th>
                <th>{{ 'paymentColumnSum'|trans }}</th>
                <th>{{ 'paymentColumnDate'|trans }}</th>
                <th>{{ 'paymentColumnComment'|trans }}</th>
            </tr>
        <thead>

        <tbody id="payments-list">
        {% for payment in payments %}
            <tr class="row">
                <td><input type="checkbox" value="{{ payment.id }}"></td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.date|date(DATE_FORMAT_SHORT) }}</td>
                <td>{% if payment.comment %}{{ payment.comment }}{% else %}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
